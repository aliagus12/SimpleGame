<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/_txt_title_panduan_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/panduan_game"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/_txt_panduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_txt_title_panduan_game"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/_btn_ok_panduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/_txt_panduan"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="@string/ok"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</RelativeLayout>